CREATE TABLE estados(
       codigo NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY,
       nome VARCHAR2(20),
       CONSTRAINT estados_codigo_pk PRIMARY KEY (codigo)
);

CREATE TABLE cidades(
       codigo NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY,
       nome VARCHAR2(40),
       codigoestado NUMBER,
       CONSTRAINT cidades_codigo_pk PRIMARY KEY (codigo),
       CONSTRAINT cidades_codigoestado_fk FOREIGN KEY (codigoestado) REFERENCES estados(codigo)
);

CREATE TABLE centro_distribuicao(
       codigo NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY,
       nome VARCHAR2(40),
       codigocidade NUMBER,
       bairro VARCHAR2(40),
       logradouro VARCHAR2(50),
       CONSTRAINT centro_distribuicao_codigo_pk PRIMARY KEY (codigo),
       CONSTRAINT centro_distribuicao_codigocidade_fk FOREIGN KEY (codigocidade) REFERENCES cidades(codigo)
);

